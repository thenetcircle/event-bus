<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%X{akkaTimestamp} %-5level %logger{36} %X{sourceThread} %X{akkaSource} - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="ch.qos.logback" level="WARN" />
	<logger name="org.apache.kafka" level="INFO" />
	<logger name="akka.event" level="INFO" />
	<logger name="akka.http.impl.engine.client.PoolGateway" level="INFO" />
	<logger name="akka.io.TcpOutgoingConnection" level="INFO" />

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>